{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "Decision Tree Trainer Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "FileSet Name",
          "name": "fileSetName"
        },
        {
          "widget-type": "textbox",
          "label": "Path",
          "name": "path"
        },
        {
          "widget-type": "csv",
          "label": "Features to Include for training",
          "name": "featureFieldsToInclude",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name"
          }
        },
        {
          "widget-type": "csv",
          "label": "Features to Exclude while training",
          "name": "featureFieldsToExclude",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name"
          }
        },
        {
          "widget-type": "keyvalue",
          "label": "Categorical Features Information",
          "name": "cardinalityMapping",
          "widget-attributes": {
            "showDelimiter": "false"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Label Field",
          "name": "labelField"
        },
        {
          "widget-type": "number",
          "label": "Maximum Depth of Tree",
          "name": "maxDepth",
          "widget-attributes": {
            "default": "10",
            "min": 2
          }
        },
        {
          "widget-type": "number",
          "label": "Maximum number of Bins",
          "name": "maxBins",
          "widget-attributes": {
            "default": "100",
            "min": 2
          }
        }
      ]
    }
  ],
  "outputs": []
}
